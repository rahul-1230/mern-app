<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders</title>
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

    <style>
       <%- include('./sidebarNheader.css') %>
    </style>
    <style>
           
  #orders-table {
  border-collapse: collapse;
  position: static;
  max-width: 100%;
  background-color: #d2f6ff;
  overflow: auto;
  border-bottom: solid 1px rgb(0, 204, 255);
  box-shadow: 0rem 0.3rem 0.1rem rgba(0, 0, 0, 0.5);
}
  th, td {
  text-align: left;
  padding: 8px 10px;
  white-space: nowrap;
}
  th{
  position: sticky;
  top: 0;
  text-align: center;
}
  tr{
  border: none;
  background-color: #dcd6f7;
}
  td {

  border-right: solid 1px #424874; 
  border-left: solid 1px #424874;
}

#orders-table .actions{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

#orders-table .actions button{
  background-color: #4083ff;
  border-radius: 1rem;
  color: white;
  font-size: large;
  padding: 0.3rem;
}


#orders-table .actions button:hover{
  background-color: #003597;
  cursor: pointer;
  box-shadow: 0 1px 1px black;
}

/*   tr:nth-child(even){background-color: #dcd6f7} */

  th {
  background-color: #424874;
  color: white;
}
    </style>
    <style>
      #orders-table_wrapper{
        margin: 1rem 0;
        min-width: 300px;
      }
      #orders-table_length, #orders-table_filter, #orders-table_info, #orders-table_paginate{
        margin: 0.5rem 0;
      }
    </style>
     <style>
        <%- include('./orders/allOrders.css') %>
    </style>
</head>
<body>
    
    <div class="orders">
        <div class="orderListNav">
                <div class="allOrders activeList first" >
                            <a href="#">All Orders</a>
                </div>
                <div class="allOrders" >
                    <a href="/admin/orderList/shopwise">Shop wise</a>
                </div>
        </div>
    
       <div class="orderData">
           <div class="all-orders">
            <% 
                if(orders.length != 0){
                  %>
                  <table id="orders-table">
                    <thead>
                        <tr>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Total</th>
                                <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                  <%
                    for( var i=0; i < orders.length; i++){
                        %>
                       
                          <tr>
                            <td><%= orders[i].customer.name %></td>
                            <td><%= orders[i].customer.phone %></td>
                            <td><%= orders[i].customer.email %></td>
                            <td><%= orders[i].frame.price %></td>
                            <td>
                              <div class="actions">
                                <form action="/admin/order/<%= orders[i].shopid %>/<%= orders[i].customer._id %>/<%= orders[i].frame._id %>">
                                  <button type="submit" id="orderbtn" class="fa fa-eye"></button>
                                </form>
                              </div>

                            </td>
                          </tr>
                        
                        <%
                    }
                    %>
                  </tbody>
                </tbody>
                </table>
                <%
                }
            %>
                
    
           </div>
       </div>
      </div><!-- orders -->
 <!-- Datatable plugin JS library file -->
 <!-- Datatable plugin CSS file -->
 <link rel="stylesheet" href=
 "https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" />

 <!-- jQuery library file -->
   <script type="text/javascript" 
   src="https://code.jquery.com/jquery-3.5.1.js">
   </script>
 <script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js">
</script>
<script>

/* Initialization of datatable */
$(document).ready(function() {
 $('#orders-table').DataTable({ });
});
</script>
</body>
</html>