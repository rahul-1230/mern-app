                                        <path fill="#fff" d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                                    </svg>
                                </span>                                
                            </div>
                            <div class="input-field cgroup">
                                <input type="password" id="signupConfirmPassword" placeholder="Confirm Password" name="cpassword" required>
                                <span class="see-cpassword">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                        <path d="M0 0h24v24H0z" fill="none"/>
                                        <path fill="#fff" d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                                    </svg>
                                </span>                                
                            </div>
                           <div>
                                <p class="alertError" id="alertError" style="color: red;"></p>
                           </div>
                            <div class="input-field">
                                <button class="btn btn-submit" type="submit" id="signup-submit" >Get started</button>
                            </div>
                        </form>
                    </div>
                    <div class="footer">
                        <button class="btn btn-rotate" id="btn-login">I have an account</button>
                    </div>
                </div> <!-- end signup-form panel -->
            </div> <!-- end card -->
        </div> <!-- end card-container -->
    </div>

    <script>

    const pwd = document.getElementById('signupPassword');
    const cpwd = document.getElementById('signupConfirmPassword');
    const err = document.getElementsById('alertError'); 

    cpwd.onkeyup = function() {
        if(pwd.value != cpwd.value){
            err.innerHTML = "Passwords are not matching!";
        }
    }

    </script>
