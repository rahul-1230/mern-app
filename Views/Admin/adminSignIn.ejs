input :invalid{
    border: 2px solid red;
}

input :valid{
    border: 2px solid black;
}

.error {
    position: fixed;
    width: 100%;
    height: auto;
    text-align: left;
    background-color: #dcd6f7;
    padding: 1rem;
    color: red;
    font-size: larger;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.error .closeError{
    position: absolute;
    right: 0;
    margin-right: 3rem;
    background: none;
    border: none;
    font-size: larger;
    color: black;
}
