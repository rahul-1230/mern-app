                            <div class="input-field" >
                                <input type="text" placeholder="Username" name="name" required>
                            </div>
                            <div class="input-field" >
                                <input type="email" placeholder="Email" name="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2, 4}$" required>
                            </div>
                            <div class="input-field group">
                                <input type="password" id="signupPassword" placeholder="Password" name="password" minlength=8 maxlength=20 required>
                                <span class="see-password">
